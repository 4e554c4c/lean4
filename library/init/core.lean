| (isFalse n) := absurd rfl n

theorem decidableEqInrNeg {α : Sort u} [decidableEq α] {a b : α} : Π n : a ≠ b, decEq a b = isFalse n :=
assume n,
match decEq a b with
| isTrue e   := absurd e n
