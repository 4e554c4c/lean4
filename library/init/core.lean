have (a ↔ false) = (¬ a), from propext (iffFalse a),
eq.subst (@iffEqEq a false) this

theorem eqTrue {a : Prop} : (a = true) = a :=
have (a ↔ true) = a, from propext (iffTrue a),
eq.subst (@iffEqEq a true) this

