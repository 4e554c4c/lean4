def isDecEq {α : Sort u} (p : α → α → bool) : Prop   := ∀ ⦃x y : α⦄, p x y = tt → x = y
def isDecRefl {α : Sort u} (p : α → α → bool) : Prop := ∀ x, p x x = tt

instance : decidableEq bool :=
{decEq := λ a b, match a, b with
