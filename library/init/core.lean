                               else isFalse (λ h', sum.noConfusion h' (λ h', absurd h' h))
 | (sum.inr a), (sum.inl b) := isFalse (λ h, sum.noConfusion h)
 | (sum.inl a), (sum.inr b) := isFalse (λ h, sum.noConfusion h)}
end

