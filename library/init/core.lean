def decidableEqOfBoolPred {α : Sort u} {p : α → α → bool} (h₁ : isDecEq p) (h₂ : isDecRefl p) : decidableEq α :=
{decEq := λ x y : α,
 if hp : p x y = tt then isTrue (h₁ hp)
 else isFalse (assume hxy : x = y, absurd (h₂ y) (@eq.recOn _ _ (λ z _, ¬p z y = tt) _ hxy hp))}

